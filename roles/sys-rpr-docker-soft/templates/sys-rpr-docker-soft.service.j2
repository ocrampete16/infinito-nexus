[Unit]
Description=restart unhealthy docker containers
OnFailure=sys-alm-compose.infinito@%n.service

[Service]
Type=oneshot
ExecStartPre=/bin/sh -c '/usr/bin/python3 {{ path_system_lock_script }} {{ system_maintenance_services | join(' ')  }} --ignore {{system_maintenance_cleanup_services| join(' ') }} sys-rpr-docker-soft --timeout "{{system_maintenance_lock_timeout_heal_docker}}"'
ExecStart=/bin/sh -c '/usr/bin/python3 {{heal_docker}}sys-rpr-docker-soft.py {{path_docker_compose_instances}}'
